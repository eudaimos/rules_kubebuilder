    name = "release",
    srcs = glob([
        "*.bazel",
        "*.bzl",
    ]) + [
        "WORKSPACE",
    ],
    extension = "tar.gz",
    package_dir = "rules_kubebuilder",
    deps = [
        "//controller-gen:release",
        "//kubebuilder:release",
        "//kustomize:release",
        "//deepcopy-gen:release",
